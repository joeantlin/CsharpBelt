@model Event

<nav>
    <h1>Dojo activity Center</h1>

    <div><a href="/">Home</a></div>
    <div><a href="/logout">Logout</a></div>
</nav>

<h2>Create and Activity</h2>
<div class="form-wrap">
    <form asp-action="Add" asp-controller="Home" method="post">
        <div class="form-group">
            <label for="Title">Title</label>
            <input class="form-control" asp-for="Title" id="Title">
            <span class="text-red" asp-validation-for="Title" ></span>
        </div>
        <div class="form-group">
            <label for="Date">Date</label>
            <input class="form-control" asp-for="Date">
            <span class="text-red" asp-validation-for="Date"></span>
        </div>
        <div class="form-group">
            <label for="Time">Time</label>
            <input class="form-control" asp-for="Time">
            <span class="text-red" asp-validation-for="Time"></span>
        </div>
        <div class="form-group">
            <label for="Duration">Duration</label>
            <input class="form-control" asp-for="Duration">
            <select class="form-control" asp-for="DurationType">
                <option value="Hours">Hours</option>
                <option value="Minutes">Minutes</option>
            </select>
            <span class="text-red" asp-validation-for="Duration"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea class="form-control" asp-for="Description"></textarea>
            <span class="text-red" asp-validation-for="Description"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
</div>